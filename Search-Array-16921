#include <iostream>
#include <stdio.h>
using namespace std;
int main()
{
    int i;
        int n;
    cin >> n;
    int lower=0;
    char ch[20];
    
    if(n>0 && n<=20){
        
           for(i=0; i<n; i++) 
    {
        cin >> ch[i]; 
    }
    
    for(i=0; ch[i]!=0; i++){
    if(ch[i]>=97 && ch[i]<=122){
    lower++;
    
    }
    }
    if(lower==0)
    {cout<<-1;}
    else
    {cout<<lower;

    }
    }else{
         cout<<"Invalid array size";
        exit(0);
    }
    
  
    return 0;
}
